<%# coding: utf-8 %>

<article id="intro" class="area frame">
  <div class="content">
    <h1>Gunfire Effects Generator</h1>
    <%= render '_image_block.html.erb' %>
  </div><!-- .content -->
</article>

<article id="info" class="area frame">
  <div class="content">
    <h1>Gunfire Effects Generator <span class="sub">demo</span></h1>
    <div class="image-block">
      <div class="text">
        <p>Necessity is the mother of invention. When delicate
         microphones were being damaged by recording the sound of
         blanks being fired from guns, BBC engineers stepped in to
         create a machine that would simulate the sound in a safe way.

        <p>This application is a simulation of the Gunfire Effects Generator using the
          Web Audio API.</p>
      </div><!-- .text -->
    </div><!-- .image-block -->
  </div><!-- .content -->
</article>

<article id="machine-wrapper" class="area">
  <div id="machine">
    <div id="volume" class="knob"></div>
    <div id="rate-of-fire" class="knob"></div>
    <div id="distance" class="knob"></div>
    <div id="multi-fire" class="off"></div>
    <div id="trigger"></div>
  </div>
</article><!-- #machine-wrapper -->

<article id="code" class="area">
  <%= @code %>
</article>
